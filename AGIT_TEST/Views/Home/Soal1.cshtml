@{
    ViewBag.Title = "Soal 1";
    List<int> Output = new List<int>();
    List<int> Input = new List<int>();
    if (ViewBag.Output != null)
    {
        Output = ViewBag.Output;
    }
    else
    {
        Output = new List<int>() { 0, 0, 0, 0, 0 };
    }

    if (ViewBag.Input != null)
    {
        Input = ViewBag.Input;
    }
    else
    {
        Input = new List<int>() { 0, 0, 0, 0, 0 };
    }
}

<div class="jumbotron">
    <h1>Soal 1 </h1>
</div>

@using (Html.BeginForm("Soal1", "Home", FormMethod.Post, new { @class = "form-horizontal", id = "submitPlan" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <h2>Plan</h2>
                <table class="table table-bordered">
                    <thead style="background-color:black;color:white">
                        <tr>
                            <th scope="col">Hari</th>
                            <th scope="col">Jumlah Produksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Senin</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Input[0]" name="input"/>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Selasa</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Input[1]" name="input"/>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Rabu</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Input[2]" name="input"/>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Kamis</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Input[3]" name="input" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Jum'at</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Input[4]" name="input" />
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <h2>Output</h2>
                <table class="table table-bordered">
                    <thead style="background-color:black;color:white">
                        <tr>
                            <th scope="col">Hari</th>
                            <th scope="col">Jumlah Produksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Senin</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Output[0]" readonly="readonly" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Selasa</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Output[1]" readonly="readonly" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Rabu</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Output[2]" readonly="readonly" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Kamis</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Output[3]" readonly="readonly" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Jum'at</th>
                            <td>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="number" class="form-control" min="0" value="@Output[4]" readonly="readonly" />
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <button type="submit" class="btn btn-primary col-md-12">Submit Plan</button>
        </div>
    </div>
}